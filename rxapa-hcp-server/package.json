  "devDependencies": {
    "@cucumber/cucumber": "^11.0.1",
    "@types/chai": "^5.2.0",
    "@types/mocha": "^9.1.1",
    "@types/nodemailer": "^6.4.17",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "chai": "^4.5.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.7",
