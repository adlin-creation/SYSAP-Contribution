    "@types/supertest": "^6.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.0",
    "connect-session-sequelize": "^7.1.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.0",
